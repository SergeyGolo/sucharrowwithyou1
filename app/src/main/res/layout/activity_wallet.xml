<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WalletActivity">


    <androidx.constraintlayout.widget.Group
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="226dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Wallet"
                android:textColor="@android:color/darker_gray"
                android:textSize="22dp" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:src="@drawable/profilecircle"
        android:translationX="-131dp"
        android:translationY="40dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="172dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Hello"
        android:textSize="18dp"
        android:translationX="-60dp"
        android:translationY="-40dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="272dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Current balance:"
        android:translationX="-30dp"
        android:translationY="-70dp" />

        <TextView
            android:id="@+id/textView100"
            android:layout_width="110dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="N10,712:00"
            android:translationX="70dp"
            android:translationY="-124dp"
            android:textColor="@android:color/holo_blue_dark"/>


        <Button
            android:id="@+id/button8"
            android:layout_width="300dp"
            android:layout_height="108dp"
            android:layout_gravity="center"
            android:backgroundTint="@android:color/darker_gray"
            android:gravity="center_horizontal"
            android:text="      Top Up          "
            android:textColor="@android:color/black"
            android:textSize="14dp"
            android:translationX="0dp"
            android:translationY="-70dp"
            app:cornerRadius="5dp" />

        <TextView
            android:id="@+id/textView50"
            android:layout_width="172dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Transaction History"
            android:textSize="18dp"
            android:translationX="-100dp"
            android:translationY="-70dp" />


        <ImageView
            android:id="@+id/home"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/houseg"
            android:translationX="20dp"
            android:translationY="210dp"
            android:clickable="true"
            android:onClick="onButtonClick100"/>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/walletb"
            android:translationX="110dp"
            android:translationY="162dp" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/car"
            android:translationX="230dp"
            android:translationY="114dp" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:clickable="true"
            android:onClick="onButtonClick21"
            android:src="@drawable/prof"
            android:translationX="330dp"
            android:translationY="66dp"/>

        <ImageView
            android:id="@+id/imageView61"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/bank"
            android:translationX="90dp"
            android:translationY="-370dp" />

        <ImageView
            android:id="@+id/imageView62"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/transfer"
            android:translationX="180dp"
            android:translationY="-418dp"
            android:clickable="true"
            android:onClick="onButtonClick101"/>

        <ImageView
            android:id="@+id/imageView63"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:clickable="true"
            android:onClick="onButtonClick21"
            android:src="@drawable/card"
            android:translationX="270dp"
            android:translationY="-466dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>