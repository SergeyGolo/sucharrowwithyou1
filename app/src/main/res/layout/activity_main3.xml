<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity3">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/loadi" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView9"
            android:layout_width="282dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Delivery Sucessful"
            android:translationX="-17dp"
            android:translationY="305dp"
            android:textSize="20dp"
            />
        <TextView
            android:id="@+id/textView10"
            android:layout_width="282dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Your item has been delivered succesful"
            android:translationX="-17dp"
            android:translationY="285dp"
          />
        <TextView
            android:id="@+id/textView8"
            android:layout_width="282dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Rate Rider"
            android:translationX="-17dp"
            android:translationY="305dp"
            android:textColor="@android:color/holo_blue_dark"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:translationY="350dp"
            android:id="@+id/Addfeedback">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Add feedback"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/button18"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Done"
            android:translationX="0dp"
            android:translationY="380dp"
            android:clickable="true"
            android:onClick="Home"
            android:backgroundTint="@color/blue"
            app:cornerRadius="5dp"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>