<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateAnAccount">

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="1.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="1.0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

      <TextView
          android:id="@+id/textView"
          android:layout_width="255dp"
          android:layout_height="66dp"
          android:layout_gravity="center"
          android:gravity="center"
          android:text="Create an account"
          android:textColor="@color/black"
          android:textSize="24sp"
          android:textStyle="bold"
          android:translationX="-90dp"
          android:translationY="35dp" />

      <TextView
          android:id="@+id/textView2"
          android:layout_width="322dp"
          android:layout_height="65dp"
          android:layout_gravity="center"
          android:gravity="center"
          android:text="complite the sign up process to get started"
          android:translationX="-55dp"
          android:translationY="5dp" />

      <TextView
          android:id="@+id/textView3"
          android:layout_width="122dp"
          android:layout_height="20dp"
          android:layout_gravity="center"
          android:gravity="center"
          android:text="Full name"
          android:translationX="-155dp"
          android:translationY="5dp" />

      <com.google.android.material.textfield.TextInputLayout
          android:id="@+id/Name"
          android:layout_width="362dp"
          android:layout_height="65dp"
          android:layout_gravity="center"
          android:gravity="center"
          android:translationX="-5dp"
          android:translationY="5dp">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ivanov Ivan" />
      </com.google.android.material.textfield.TextInputLayout>

      <TextView
          android:id="@+id/textView4"
          android:layout_width="122dp"
          android:layout_height="20dp"
          android:layout_gravity="center"
          android:gravity="center"
          android:text="PhoneNumber"
          android:translationX="-140dp"
          android:translationY="5dp" />

      <com.google.android.material.textfield.TextInputLayout
          android:id="@+id/PhoneNumber"
          android:layout_width="362dp"
          android:layout_height="65dp"
          android:layout_gravity="center"
          android:gravity="center"
          android:translationX="-5dp"
          android:translationY="5dp">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="7(999)999-99-99" />
      </com.google.android.material.textfield.TextInputLayout>

      <TextView
          android:id="@+id/textView5"
          android:layout_width="122dp"
          android:layout_height="20dp"
          android:layout_gravity="center"
          android:gravity="center"
          android:text="LableName"
          android:translationX="-150dp"
          android:translationY="5dp" />

      <com.google.android.material.textfield.TextInputLayout
          android:id="@+id/LableName"
          android:layout_width="362dp"
          android:layout_height="65dp"
          android:layout_gravity="center"
          android:gravity="center"
          android:translationX="-5dp"
          android:translationY="5dp">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="**********@mail.com" />
      </com.google.android.material.textfield.TextInputLayout>

      <TextView
          android:id="@+id/textView6"
          android:layout_width="122dp"
          android:layout_height="20dp"
          android:layout_gravity="center"
          android:gravity="center"
          android:text="Password"
          android:translationX="-155dp"
          android:translationY="5dp" />

      <com.google.android.material.textfield.TextInputLayout
          android:id="@+id/Password"
          android:layout_width="362dp"
          android:layout_height="65dp"
          android:layout_gravity="center"
          android:gravity="center"
          android:translationX="-5dp"
          android:translationY="5dp">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="*********" />
      </com.google.android.material.textfield.TextInputLayout>


      <TextView
          android:id="@+id/textView7"
          android:layout_width="122dp"
          android:layout_height="20dp"
          android:layout_gravity="center"
          android:gravity="center"
          android:text="Confirm Password"
          android:translationX="-127dp"
          android:translationY="5dp" />

      <com.google.android.material.textfield.TextInputLayout
          android:id="@+id/ConfirmPassword"
          android:layout_width="362dp"
          android:layout_height="55dp"
          android:layout_gravity="center"
          android:gravity="center"
          android:translationX="-5dp"
          android:translationY="5dp">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="*********" />
      </com.google.android.material.textfield.TextInputLayout>

      <TextView
          android:id="@+id/textView8"
          android:layout_width="222dp"
          android:layout_height="20dp"
          android:layout_gravity="center"
          android:gravity="center"
          android:text="by ticking this box, you agree to our"
          android:translationX="-17dp"
          android:translationY="5dp" />

      <TextView
          android:id="@+id/textView9"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:gravity="center"
          android:text="Terms and conditions and private policy"
          android:textColor="@android:color/black"
          android:autoLink="web"
          android:onClick="openLink"
          android:clickable="true"
          android:linksClickable="true"
          android:translationX="-17dp"
          android:translationY="5dp" />

      <CheckBox
          android:id="@+id/checkBox"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="CheckBox"
          android:translationX="15dp"
          android:translationY="-49dp" />


    </LinearLayout>

  </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>