<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PaymentMethodActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="226dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Add Payment method"
                android:textSize="22dp"
                android:textColor="@android:color/darker_gray"
                />

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:onClick="onButtonClick25"
                android:translationX="10dp"
                android:translationY="-30dp"
                app:srcCompat="@drawable/arrow" />


            <Button
                android:id="@+id/button80"
                android:layout_width="300dp"
                android:layout_height="108dp"
                android:layout_gravity="center"
                android:backgroundTint="@android:color/white"
                android:textSize="14dp"
                android:translationX="0dp"
                android:translationY="20dp"
                app:cornerRadius="5dp" />

            <Button
                android:id="@+id/button90"
                android:layout_width="300dp"
                android:layout_height="108dp"
                android:layout_gravity="center"
                android:backgroundTint="@android:color/white"
                android:textSize="14dp"
                android:translationX="0dp"
                android:translationY="20dp"
                app:cornerRadius="5dp" />
            <CheckBox
                android:id="@+id/checkBox2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pay with wallet"
                android:translationX="60dp"
                android:translationY="-170dp"/>

            <CheckBox
                android:id="@+id/checkBox3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Credit / debit card"
                android:translationX="60dp"
                android:translationY="-120dp"/>

            <TextView
                android:id="@+id/textView37"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="complete the payment using your debit card"
                android:translationX="90dp"
                android:translationY="-110dp"
                android:textSize="12dp"
                android:textColor="@android:color/darker_gray"/>

            <TextView
                android:id="@+id/textView39"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="complete the payment using your e wallet"
                android:translationX="90dp"
                android:translationY="-240dp"
                android:textSize="12dp"
                android:textColor="@android:color/darker_gray"/>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>